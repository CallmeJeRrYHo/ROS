<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:text="好又多"
            style="@style/restaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_resName_menu"/>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/iv_resPhoto_menu"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="一段餐厅的简介11111111111111111111111111111111111111111111111111111111111111111111111111111111"
                    android:textSize="10sp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_resDes_menu"
                    android:maxLines="2"
                    android:ellipsize="end"
                    />
                <RatingBar
                    android:layout_marginTop="2dp"
                    android:id="@+id/rt_ratingBar_menu"
                    style="@style/Base.Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="4"
                    />
                <TextView
                    android:id="@+id/tv_sell_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已售：100份"/>
            </LinearLayout>


        </LinearLayout>
        <View style="@style/singleLine"
            android:layout_margin="5dp" />
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="20dp"
                android:src="@drawable/ic_address"
                android:layout_height="20dp" />
            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_address_menu"
                android:padding="5dp"
                android:text="这是餐厅的地址"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_weight="1"
                />
            <ImageButton
                android:background="#00000000"
                android:layout_marginRight="20dp"
                android:scaleType="fitXY"
                android:id="@+id/ib_phone_menu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_call"/>
        </LinearLayout>
    </LinearLayout>

    <View style="@style/singleLine"
        android:layout_margin="5dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:text="点菜"
            android:layout_weight="1"
            android:id="@+id/btn_order_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:text="评价"
            android:layout_weight="1"
            android:id="@+id/btn_appraise_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fl_order_appraise_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></LinearLayout>

</LinearLayout>
