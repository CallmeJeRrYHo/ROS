<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">
<de.hdodenhof.circleimageview.CircleImageView
    android:src="@drawable/boy"
    android:id="@+id/civ_userImage_item"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="15dp"
    android:layout_width="70dp"
    android:layout_height="70dp" />
    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout8"
        android:layout_alignTop="@+id/civ_userImage_item"
        android:layout_toRightOf="@+id/civ_userImage_item"
        android:layout_toEndOf="@+id/civ_userImage_item">
        <TextView
            android:text="test"
            android:id="@+id/tv_userName_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="2016-1-1"
            android:id="@+id/tv_time_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RatingBar
android:isIndicator="true"
        android:layout_marginLeft="5dp"
        android:rating="4"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
            android:numStars="5"
            style="@style/Widget.AppCompat.RatingBar.Small"
        android:id="@+id/rb_comment_star_item"
        android:layout_below="@+id/linearLayout8"
        android:layout_alignLeft="@+id/linearLayout8"
        android:layout_alignStart="@+id/linearLayout8" />
    <TextView
        android:padding="5dp"
        android:text="111111111111111111111111111111111111111111"
        android:id="@+id/tv_comment_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/civ_userImage_item"
        android:layout_toEndOf="@+id/civ_userImage_item" />
</RelativeLayout>