<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zhusediao">
<LinearLayout
    android:id="@+id/ll_main_here"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3B3D49"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="桌号："
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_deskNo_here"
            style="@style/edittext_login"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dp"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="请输入桌号" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3B3D49"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_money_here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="余额：  18￥"
            android:textColor="#ffffff"
            android:textSize="18sp" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_note_here"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3B3D49"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="备注"
            android:textColor="#ffffff"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/tv_des_here"
            android:textColor="@color/zhusediao_qian"
            android:text="请输入备注"
            android:ellipsize="end"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <ImageButton
            android:scaleType="fitCenter"
            android:background="#00000000"
            android:src="@drawable/next"
            android:layout_width="25dp"
            android:layout_height="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3B3D49"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_restaurant_here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="肯德基"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>
    <View
        style="@style/singleLine"/>
</LinearLayout>
</ScrollView>
